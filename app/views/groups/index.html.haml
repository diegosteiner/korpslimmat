= render layout: 'layouts/nested/default' do
  %h1 Neue Gruppe

  %table.table
    %thead
      %tr
        %th Name
        %th Parent
        %th.actions= link_to 'Neue Gruppe', new_group_path, class: 'btn btn-default btn-xs'

    %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= link_to_if group.parent.present?, group.parent
        %td.actions
          = button_show group_path(group)
          = button_edit edit_group_path(group)
          = button_destroy group_path(group)